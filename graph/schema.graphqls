# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type User @SQL{
  id: Int! @SQL_PRIMARY
  name: String!
  companyID: Int
  company: Company
}

type Company @SQL{
  id: Int! @SQL_PRIMARY
  Name: String!
  description: String @SQL_GORM(value:"-")
  motherCompanyID: Int
  motherCompany: Company
}


